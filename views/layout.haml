!!! 5
%html{html_attrs('en-en')}
  %head
    %title= @metaTitle || 'MindObix Productivity & Educational Apps'
    %meta{:'http-equiv' => "Content-Type", :content => "text/html; charset=utf-8"}
    %meta{:name => "lang", :content => "en"}
    %meta{:content => @metaKeywords, :name => "keywords"}
    %meta{:content => @metaDescr, :name => "description"}
    %link{:href => "/style.css", :media => "all", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "/css/flexslider.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/   
    %script{:type => "text/javascript", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"}
    %script{:defer => "", :src => "/js/jquery.flexslider.js"}
    %script{:type => "text/javascript", :src => "/js/app.js"}
  %body
    #globalheader
      #divTitle 
        %a{:href => "/"} MindObix
      #iconiDropCopy.appIconText{:onclick => "location.href=\"/idropcopy\";",:onmouseout => "this.className='appIconText';", :onmouseover => "this.className='appIconText appIconBg';"} iDropCopy
      #iconiDropPwd.appIconText{:onclick => "location.href=\"/idroppwd\";",:onmouseout => "this.className='appIconText';", :onmouseover => "this.className='appIconText appIconBg';"} iDropPwd
      #iconmyVoiceDrop.appIconText{:onclick => "location.href=\"/myvoicedrop\";",:onmouseout => "this.className='appIconText';", :onmouseover => "this.className='appIconText appIconBg';"} myVoiceDrop
      #iconiLoveMyABCs.appIconText{:onclick => "location.href=\"/ilovemyabcs\";",:onmouseout => "this.className='appIconText';", :onmouseover => "this.className='appIconText appIconBg';"} iLoveMyABCs
    .container
      .inner-container
        =yield
        %footer#globalfooter
          %div
            %ul.piped
              %li
                %a.first{:href => "/"} MindObix
              %li
                %a{:href => "/idropcopy"}iDropCopy
              %li
                %a{:href => "/idroppwd"}iDropPwd
              %li
                %a{:href => "/myvoicedrop"}myVoiceDrop
              %li
                %a{:href => "/ilovemyabcs"}iLoveMyABCs
    = haml :analytics, :layout => false